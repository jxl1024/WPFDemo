            <Button HorizontalAlignment="Center">按钮2</Button>
            <Button HorizontalAlignment="Right" VerticalAlignment="Bottom">按钮3</Button>
            <Button HorizontalAlignment="Stretch">按钮4123123</Button>
        </StackPanel>
    </Border>
</Window>
